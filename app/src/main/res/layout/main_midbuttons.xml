<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/theme_primary"
              android:orientation="vertical"
              android:paddingTop="@dimen/d10"
              android:paddingBottom="@dimen/d20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginTop="@dimen/d10"
        android:layout_marginRight="@dimen/d15"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_meishi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_meishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ms"/>

            <TextView
                android:id="@+id/tv_meishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美食"
                android:textSize="@dimen/s12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xiuxian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_xiuxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xx"/>

            <TextView
                android:id="@+id/tv_xiuxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="休闲"
                android:textSize="@dimen/s12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_yule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yule"/>

            <TextView
                android:id="@+id/tv_yule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="娱乐"
                android:textSize="@dimen/s12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xuexi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_xuexi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xuexi"/>

            <TextView
                android:id="@+id/tv_xuexi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学习"
                android:textSize="@dimen/s12"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginTop="@dimen/d10"
        android:layout_marginRight="@dimen/d15"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_gouwu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_gouwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gouwu"/>

            <TextView
                android:id="@+id/tv_gouwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物"
                android:textSize="@dimen/s12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dianying"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_dianying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dianying"/>

            <TextView
                android:id="@+id/tv_dianying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影"
                android:textSize="@dimen/s12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jiudian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_jiudian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jiudian"/>

            <TextView
                android:id="@+id/tv_jiudian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒店"
                android:textSize="@dimen/s12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_gengduo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_gengduo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qita"/>

            <TextView
                android:id="@+id/tv_gengduo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="@dimen/s12"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>