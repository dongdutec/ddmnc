<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_primary"
    tools:context=".ui.login.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/beijing_login"/>

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/state_bar"/>

            <include layout="@layout/common_bar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_background"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginTop="@dimen/d40"
            android:layout_marginRight="@dimen/d30"
            android:orientation="vertical">

            <!--手机号-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                android:layout_marginBottom="@dimen/d5">

                <TextView
                    android:layout_width="@dimen/d50"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/c7"
                    android:textSize="@dimen/s14"/>

                <EditText
                    android:id="@+id/dt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d60"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:hint="请输入手机号"
                    android:maxLength="11"
                    android:inputType="number"
                    android:textColor="@color/c5"
                    android:textColorHint="@color/c5"
                    android:textCursorDrawable="@drawable/white"
                    android:textSize="@dimen/s14"/>

                <ImageView
                    android:id="@+id/img_cha"
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20"
                    android:layout_gravity="center_vertical|right"
                    android:padding="3dp"
                    android:src="@mipmap/guanbi"/>

            </FrameLayout>

            <include layout="@layout/line"/>
            <!--密码-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                android:layout_marginTop="@dimen/d10"
                android:layout_marginBottom="@dimen/d5">

                <TextView
                    android:layout_width="@dimen/d50"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="密    码"
                    android:textColor="@color/c7"
                    android:textSize="@dimen/s14"/>

                <EditText
                    android:id="@+id/dt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d60"
                    android:background="@null"
                    android:maxLength="11"
                    android:cursorVisible="true"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="@color/c5"
                    android:textColorHint="@color/c5"
                    android:textCursorDrawable="@drawable/white"
                    android:textSize="@dimen/s14"/>

                <CheckBox
                    android:id="@+id/ck_yanjing"
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20"
                    android:layout_gravity="center_vertical|right"
                    android:button="@drawable/ck_yanjing"/>

            </FrameLayout>

            <include layout="@layout/line"/>
            <!--图片验证码-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                android:layout_marginTop="@dimen/d10"
                android:layout_marginBottom="@dimen/d5">

                <TextView
                    android:layout_width="@dimen/d50"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="验证码"
                    android:textColor="@color/c7"
                    android:textSize="@dimen/s14"/>

                <EditText
                    android:id="@+id/dt_tp_yanzhengma"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d60"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:hint="请输入验证码"
                    android:textColor="@color/c5"
                    android:maxLength="4"
                    android:textColorHint="@color/c5"
                    android:textCursorDrawable="@drawable/white"
                    android:textSize="@dimen/s14"/>

                <ImageView
                    android:id="@+id/img_tp_yanzhengma"
                    android:layout_width="@dimen/d60"
                    android:layout_height="@dimen/d30"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/yzm_login"/>

            </FrameLayout>

            <include layout="@layout/line"/>
            <!--忘记密码&&立即注册-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40">

                <TextView
                    android:id="@+id/_tv_forgetpw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d10"
                    android:text="忘记密码?"
                    android:textColor="@color/c16"
                    android:textSize="@dimen/s12"/>

                <TextView
                    android:id="@+id/_tv_goregister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/d10"
                    android:text="立即注册"
                    android:textColor="@color/c16"
                    android:textSize="@dimen/s12"/>
            </FrameLayout>

            <!--登录-->
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d50"
                android:background="@drawable/save_btn_gray1"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:text="登录"
                android:textColor="@color/theme_primary"
                android:textSize="@dimen/s14"/>

            <!--服务条款-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d40"
                android:layout_marginBottom="@dimen/d20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/ck_tiaokuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:button="@drawable/ck_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d2"
                        android:gravity="center_vertical"
                        android:text="阅读并同意"
                        android:textColor="@color/c6"
                        android:textSize="@dimen/s12"/>

                    <TextView
                        android:id="@+id/tv_tiaokuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="《服务条款》"
                        android:textColor="@color/c16"
                        android:textSize="@dimen/s12"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>