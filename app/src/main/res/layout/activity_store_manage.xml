<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.my.activity.StoreManageActivity">

    <include layout="@layout/state_bar"/>

    <include layout="@layout/common_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d30"
        android:layout_marginTop="@dimen/d30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/d100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d30"
            android:gravity="center_vertical"
            android:text="商家后台账号:"
            android:textColor="@color/c6"
            android:textSize="@dimen/s12"/>

        <TextView
            android:id="@+id/tv_store_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/c6"
            android:textSize="@dimen/s12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/d100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d30"
            android:gravity="center_vertical"
            android:text="商家后台密码:"
            android:textColor="@color/c6"
            android:textSize="@dimen/s12"/>

        <TextView
            android:id="@+id/tv_store_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/c6"
            android:textSize="@dimen/s12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/d100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d30"
            android:gravity="center_vertical"
            android:text="商家后台地址:"
            android:textColor="@color/c6"
            android:textSize="@dimen/s12"/>

        <TextView
            android:id="@+id/tv_store_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/c6"
            android:textSize="@dimen/s12"/>
    </LinearLayout>


</LinearLayout>