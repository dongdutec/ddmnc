<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/rl_bar"
                android:layout_height="@dimen/d40">

    <ImageView
        android:id="@+id/bar_left_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/d30"
        android:src="@mipmap/path"/>

    <TextView
        android:id="@+id/bar_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bar_left_img"
        android:gravity="center_horizontal"
        android:textColor="@color/c7"
        android:textSize="@dimen/s16"/>

    <TextView
        android:id="@+id/bar_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textColor="@color/c7"
        android:textSize="@dimen/s16"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/bar_right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bar_right_text"
        android:padding="@dimen/d10"/>

    <TextView
        android:id="@+id/bar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/d10"
        android:text=""
        android:textColor="@color/c7"
        android:textSize="@dimen/s14"/>
    <View
        android:id="@+id/v_line"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="0.2dp"
        android:background="@color/lightgray"/>


</RelativeLayout>