<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:layout_marginBottom="@dimen/d10"
                android:orientation="horizontal">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/c1"/>

    <ImageView
        android:id="@+id/main_listimg"
        android:layout_width="@dimen/d100"
        android:layout_height="@dimen/d80"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/d15"
        android:layout_marginRight="@dimen/d5"/>

    <TextView
        android:id="@+id/main_storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d15"
        android:layout_toRightOf="@+id/main_listimg"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/c7"
        android:textSize="@dimen/s14"/>

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_storename"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d5"
        android:padding="@dimen/d5"
        android:src="@mipmap/star_"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_storename"
        android:layout_marginTop="@dimen/d5"
        android:layout_toRightOf="@+id/main_listimg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_mainlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dizhi"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d2"
            android:text=""
            android:textColor="@color/c16"
            android:textSize="@dimen/s12"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main"
        android:layout_marginTop="@dimen/d10"
        android:layout_toRightOf="@+id/main_listimg"
        android:text=""
        android:textSize="@dimen/s12"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/d10"
        android:text=""
        android:textSize="@dimen/s12"/>


</RelativeLayout>